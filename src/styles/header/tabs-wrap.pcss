.tabs-wrap {
    display: grid;
    grid-auto-columns: max-content;
    grid-template-rows: 1fr;
    grid-auto-flow: column;
    grid-gap: 30px;

    @media screen and (max-width: 768px) {
        display: none;
    }

    &__item {

    }

    &--open {
        display: grid;
        grid-template-columns: 1fr;
        grid-auto-rows: max-content;
        grid-auto-flow: row;
        grid-gap: 40px;
    }
}